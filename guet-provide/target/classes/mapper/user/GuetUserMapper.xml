<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yang.mapper.GuetUserMapper">

    <!-- 1. 增加description到memo的字段映射 -->
    <resultMap id="userMap" type="com.yang.pojo.GuetUser" autoMapping="true">
        <!-- 数据库字段description → 实体类字段memo -->
        <result column="description" property="memo"/>
    </resultMap>

    <!-- 2. 修正列集合：替换为用户表实际字段，包含description -->
    <sql id="columns">
        id, username, password, name, phone, avatar, description, status, create_time, update_time, sex
    </sql>

    <select id="getUserById" resultMap="userMap">
        select <include refid="columns"/>
        from guet_user
        where id = #{id}
    </select>

    <select id="getUserInfo" resultMap="userMap">
        select <include refid="columns"/>
        from guet_user
    </select>

    <!-- 通过账号查询用户信息 -->
    <select id="getUserByUsername" resultMap="userMap" parameterType="string">
        select <include refid="columns"/>
        from guet_user
        where username = #{username}
        order by id desc
        limit 1
    </select>


    <select id="verifyLogin" resultMap="userMap" parameterType="com.yang.pojo.GuetUser">
        select <include refid="columns"/>
        from guet_user
        where
            username = #{username}
        and
            password = #{password}
        limit 1
    </select>

    <!-- 通过用户名模糊查询用户列表 -->
    <select id="searchUserByUsername" resultMap="userMap" parameterType="string">
        select <include refid="columns"/>
        from guet_user
        where username like concat('%', #{keyword}, '%')
        order by id desc
    </select>

    <!-- 通过真实姓名模糊查询用户列表 -->
    <select id="searchUserByName" resultMap="userMap" parameterType="string">
        select <include refid="columns"/>
        from guet_user
        where name like concat('%', #{keyword}, '%')
        order by id desc
    </select>

    <!-- 添加新用户 -->
    <insert id="insertUser" parameterType="com.yang.pojo.GuetUser">
        insert into guet_user
        (username, password, name, phone, avatar, description, create_time, update_time, sex)
        values
            (#{username}, #{password}, #{name}, #{phone}, #{avatar}, #{memo}, now(), now(), #{sex})
    </insert>

    <!-- 动态更新用户信息 -->
    <update id="updateUser" parameterType="com.yang.pojo.GuetUser">
        update guet_user
        set
        <if test="username != null">username = #{username},</if>
        <if test="password != null">password = #{password},</if>
        <if test="name != null">name = #{name},</if>
        <if test="phone != null">phone = #{phone},</if>
        <if test="avatar != null">avatar = #{avatar},</if>
        <if test="memo != null">description = #{memo},</if>
        <if test="status != null">status = #{status},</if>
        <if test="sex != null">sex = #{sex},</if>
        update_time = now()
        where id = #{id}
    </update>

    <!-- 删除用户（逻辑删除：修改status为0） -->
    <update id="deleteUserById" parameterType="long">
        update guet_user
        set status = 0, update_time = now()
        where id = #{id}
    </update>

    <!-- 物理删除用户（谨慎使用） -->
    <delete id="deleteUserPhysicallyById" parameterType="long">
        delete from guet_user
        where id = #{id}
    </delete>

    <!-- 修改当前用户的状态为1 -->
    <update id="updateStatus" parameterType="long">
        update guet_user
        set status = 1, update_time = now()
        where id = #{id}
    </update>

</mapper>