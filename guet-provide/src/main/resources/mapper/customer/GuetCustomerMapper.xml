<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yang.mapper.CustomerMapper">

        <resultMap id="CustomerMap" type="com.yang.pojo.Customer" autoMapping="true">
            <id column="customer_id" property="id"/>
            <!-- 非主键映射（列名与字段名不一致的部分） -->
            <result column="customer_name" property="name"/>
            <result column="customer_phone" property="phone"/>
            <result column="customer_email" property="email"/>
            <result column="customer_address" property="address"/>
            <result column="customer_sex" property="sex"/>
            <result column="description" property="desc"/>
        </resultMap>

        <sql id="columns">
        customer_id,user_id,order_id,
        customer_name,customer_phone,customer_email,
        customer_address,customer_sex,description
        </sql>

    <select id="selectByUserId" resultMap="CustomerMap">
        select <include refid="columns"/>
        from guet_customer
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
    </select>

    <select id="selectAll" resultMap="CustomerMap">
        SELECT
            <include refid="columns"/>
        FROM guet_customer
    </select>

    <select id="selectByName" resultMap="CustomerMap">
        SELECT
            <include refid="columns"/>
        FROM
            guet_customer
        WHERE
            customer_name LIKE CONCAT('%', #{name}, '%')
    </select>

    <insert id="insert"  keyColumn="customer_id">
        INSERT INTO guet_customer (
            user_id, order_id, customer_name, customer_phone,
            customer_email, customer_address, customer_sex, description
        ) VALUES (
                     #{userId}, #{orderId}, #{name}, #{phone},
                     #{email}, #{address}, #{sex}, #{desc}
                 )
    </insert>

    <update id="updateById">
        UPDATE guet_customer
        SET user_id=#{userId}, order_id=#{orderId}, customer_name=#{name},
            customer_phone=#{phone}, customer_email=#{email},
            customer_address=#{address}, customer_sex=#{sex}, description=#{desc}
        WHERE customer_id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM
            guet_customer
        WHERE
            customer_id = #{id}
    </delete>

</mapper>