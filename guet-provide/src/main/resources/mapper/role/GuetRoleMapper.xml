<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yang.mapper.GuetRoleMapper">

    <!-- 1. 增加description到memo的字段映射 -->
    <resultMap id="roleMap" type="com.yang.pojo.GuetRole" autoMapping="true">
        <!-- 数据库字段description → 实体类字段memo -->
        <result column="description" property="memo"/>
    </resultMap>

    <sql id="columns">
        id, role_name, role_code, description, create_time, update_time, is_deleted
    </sql>

    <!-- 根据多个roleId批量查询（推荐，替代循环单次查询） -->
    <select id="selectByIds" resultMap="roleMap">
        SELECT
        <include refid="columns"/>
        FROM guet_role
        WHERE
        id IN
        <foreach collection="list" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>

    </select>

    <!-- 查询所有未删除的角色 -->
    <select id="selectAll" resultMap="roleMap">
        SELECT
        <include refid="columns"/>
        FROM guet_role
        WHERE is_deleted = 0
    </select>

    <!-- 按ID查询 -->
    <select id="selectById" resultMap="roleMap" parameterType="java.lang.Long">
        SELECT
        <include refid="columns"/>
        FROM guet_role
        WHERE id = #{id} AND is_deleted = 0
    </select>


    <!-- 逻辑删除（is_deleted） -->
    <update id="deleteById" parameterType="java.lang.Long">
        UPDATE guet_role
        SET is_deleted = 1,
            update_time = NOW()
        WHERE id = #{id} AND is_deleted = 0
    </update>


    <!-- 更新所有字段 -->
    <update id="updateRole" parameterType="com.yang.pojo.GuetRole">
        UPDATE guet_role
        SET role_name = #{roleName},
            role_code = #{roleCode},
            description = #{memo},
            update_time = NOW()
        WHERE id = #{id} AND is_deleted = 0
    </update>

    <!-- 新增角色 -->
    <insert id="insertRole" parameterType="com.yang.pojo.GuetRole"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO guet_role (
            role_name,
            role_code,
            description,
            create_time,
            update_time,
            is_deleted
        ) VALUES (
                     #{roleName},
                     #{roleCode},
                     #{memo},
                     NOW(),
                     NOW(),
                     0
                 )
    </insert>


</mapper>