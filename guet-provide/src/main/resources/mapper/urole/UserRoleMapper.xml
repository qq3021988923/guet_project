<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yang.mapper.UserRoleMapper">


    <!-- 简化ResultMap：仅声明类型，依赖全局驼峰配置自动映射 -->
    <resultMap id="userRoleMap" type="com.yang.pojo.UserRole" autoMapping="true"/>

    <!-- 公用列：抽取user_role表核心字段 -->
    <sql id="columns">
        id, role_id, user_id
    </sql>

    <delete id="deleteByUserId">
        delete from guet_user_role where user_id = #{userId}
    </delete>

    <select id="listAllUserRole" resultMap="userRoleMap">
        select <include refid="columns"/>
        from guet_user_role
    </select>

    <select id="listUserRoleByCondition" parameterType="com.yang.pojo.UserRole" resultMap="userRoleMap">
        select <include refid="columns"/>
        from guet_user_role
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <delete id="deleteUserRoleById" parameterType="java.lang.Long">
        delete from guet_user_role
        where id = #{id}
    </delete>

    <insert id="uroleInsert" parameterType="com.yang.pojo.UserRole"
            useGeneratedKeys="true">
        insert into
            guet_user_role
            (role_id,user_id)
        values
            (#{roleId},#{userId})
    </insert>

</mapper>